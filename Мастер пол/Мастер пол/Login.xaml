<Window x:Class="Мастер_пол.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Мастер_пол"
        mc:Ignorable="d"
        Title="Добро пожаловать на форму входа" Height="265" Width="387" Icon="/login-avatar.png">
    <Grid Background="#FFF4E8D3">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="75,51,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="75,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="loginTb" HorizontalAlignment="Left" Margin="145,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordTb" HorizontalAlignment="Left" Margin="145,107,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Height="37" Width="159" Background="#FF67BB81" Click="Button_Click"/>

    </Grid>
</Window>
