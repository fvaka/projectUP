<Window x:Class="Мастер_пол.history"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Мастер_пол"
        mc:Ignorable="d"
        Title="История партнеров" Height="413" Width="571" Icon="/history.png">
    <Grid>
        <ComboBox x:Name="cmbPartners" HorizontalAlignment="Left" Margin="30,26,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbPartners_SelectedIndexChanged"/>
        <Button x:Name="refreshBtn" Content="Обновить" HorizontalAlignment="Left" Margin="48,318,0,0" VerticalAlignment="Top" Height="34" Width="127" Click="refreshBtn_Click" Background="#FF67BA81"/>
        <Button x:Name="backBtn" Content="Назад" HorizontalAlignment="Left" Margin="198,318,0,0" VerticalAlignment="Top" Height="34" Width="108" Click="backBtn_Click" Background="#FFD4EEDC"/>
        <DataGrid x:Name="dataGridView1" Margin="30,68,51,114" Background="#FFF4E8D2" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Window>
